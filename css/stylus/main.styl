@import 'nib'

#abbm
	height 230px
	padding 1em 2em
	width 204px

	header
		margin-bottom 1.5em

	// label, #abbm_start_date, #abbm_end_date, #abbm_reload, img
	// 	float left

	label
		float left
		padding 2px 5px 0 0
		text-align right
		width 50px

	img
		relative top 2px left 5px

	#abbm_start_date, #abbm_end_date
		font-size 12px
		width 100px

	.form-control
		float left
		height 26px
		padding 3px 6px

	#abbm_reload
		margin-left 50px
		width 100px

	.ui-datepicker
		font-size 12px
		absolute top 0 left 0
	.ui-widget-content
		border none